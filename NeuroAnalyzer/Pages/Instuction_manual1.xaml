<Page x:Class="NeuroAnalyzer.Instuction_manual1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeuroAnalyzer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Instuction_manual1">

    <Grid Background="White">
        <Image Source="/Images/Background.png" Stretch="Fill"/>
        <Image Margin="0 0 700 380" Source="/Images/logo.png" Height="25" Width="80" Stretch="Fill"/>
        <TextBlock Margin="0 50 0 0" TextWrapping="Wrap" TextAlignment="Center" FontSize="25"><Run Text="Давайте подключим оборудование, следуйте инструкциям на экране." /></TextBlock>
        <Button Margin="0 300 300 0" Content="Назад" FontSize="20" Height="40" Width="200" Background="#FF2C99B0" BorderBrush="{x:Null}" Foreground="White" Click="Button_Back_Click" Style="{DynamicResource RoundButton}"/>
        <Button Margin="300 300 0 0" Content="Начать" FontSize="20" Height="40" Width="200" Background="#FF2C99B0" BorderBrush="{x:Null}" Foreground="White" Click="Button_Start_Click" Style="{DynamicResource RoundButton}"/>
        <Frame x:Name="InstuctionFrame2" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
