<Window x:Class="NeuroAnalyzer.Instruction_manual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuroAnalyzer"
        mc:Ignorable="d"
        Title="Instruction_manual" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Image Source="/Images/Background.png" Stretch="Fill"/>
        <Image Margin="0 0 700 380" Source="/Images/logo.png" Height="25" Width="80" Stretch="Fill"/>
        <TextBlock Margin="0 50 0 0" TextWrapping="Wrap" TextAlignment="Center" FontSize="25"><Run Text="Приветствуем!"/><LineBreak/><Run Text="Давайте подключим оборудование, следуйте инструкциям на экране." /></TextBlock>
        <Button Margin="0 300 0 0" Content="Начать" FontSize="20" Height="40" Width="200" Background="#FF2C99B0" BorderBrush="{x:Null}" Foreground="White" Click="Button_Start_Click" Style="{DynamicResource RoundButton}"/>
        <Frame x:Name="InstuctionFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
